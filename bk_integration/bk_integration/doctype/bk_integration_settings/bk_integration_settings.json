  "fields": [
    {
      "fieldname": "section_integration",
      "fieldtype": "Section Break",
      "label": "BK Integration"
    },
    {
      "fieldname": "enable_integration",
      "label": "Enable Integration",
      "fieldtype": "Check"
    },
    {
      "fieldname": "bk_base_url",
      "label": "BK API Base URL",
      "fieldtype": "Data",
      "description": "Base URL of BK\u2019s API (optional \u2013 for future outbound calls)."
    },
    {
      "fieldname": "bk_api_key",
      "label": "BK API Key",
      "fieldtype": "Data",
      "description": "Optional \u2013 if BK provides an API key for outbound calls."
    },
    {
      "fieldname": "bk_api_secret",
      "label": "BK API Secret",
      "fieldtype": "Password",
      "description": "Optional \u2013 stored encrypted."
    },
    {
      "fieldname": "section_filters",
      "fieldtype": "Section Break",
      "label": "Filters & Access Control"
    },
    {
      "fieldname": "student_customer_group",
      "label": "Student Customer Group",
      "fieldtype": "Link",
      "options": "Customer Group",
      "description": "Only customers in this group will be exposed to BK."
    },
    {
      "fieldname": "default_company",
      "label": "Default Company",
      "fieldtype": "Link",
      "options": "Company",
      "description": "Used for context / filtering invoices if needed."
    },
    {
      "fieldname": "expose_item_details",
      "label": "Expose Invoice Line Items",
      "fieldtype": "Check",
      "default": "1",
      "description": "If checked, BK will receive line item names and amounts."
    },
    {
      "fieldname": "section_mapping",
      "fieldtype": "Section Break",
      "label": "ERPNext Mapping"
    },
    {
      "fieldname": "reference_doctype",
      "label": "Reference Doctype (usually 'Sales Invoice')",
      "fieldtype": "Link",
      "options": "DocType",
      "default": "Sales Invoice"
    },
    {
      "fieldname": "reference_field",
      "label": "Reference Field (e.g. student id, admission number)",
      "fieldtype": "Data",
      "description": "Optional custom field on Sales Invoice or Customer used as external reference."
    },
    {
      "fieldname": "log_requests",
      "label": "Log Incoming Requests",
      "fieldtype": "Check",
      "default": "1"
    },
    {
      "fieldname": "section_system",
      "label": "System Information",
      "fieldtype": "Section Break",
      "insert_after": "log_requests"
    },
    {
      "fieldname": "system_full_name",
      "label": "System Full Name",
      "fieldtype": "Data"
    },
    {
      "fieldname": "system_short_name",
      "label": "System Short Name",
      "fieldtype": "Data"
    },
    {
      "fieldname": "column_auth",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "auth_username",
      "label": "Auth Username",
      "fieldtype": "Data",
      "description": "Shared with BK / UrubutoPay for authentication"
    },
    {
      "fieldname": "auth_password",
      "label": "Auth Password",
      "fieldtype": "Password",
      "description": "Shared with BK / UrubutoPay for authentication"
    },
    {
      "fieldname": "token_ttl_seconds",
      "label": "Token TTL (seconds)",
      "fieldtype": "Int",
      "default": 86400
    },
    {
      "fieldname": "section_urls",
      "label": "Webhook URLs (Your ERPNext)",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "auth_url",
      "label": "Auth URL",
      "fieldtype": "Data"
    },
    {
      "fieldname": "validation_url",
      "label": "Validation URL",
      "fieldtype": "Data"
    },
    {
      "fieldname": "payment_notification_url",
      "label": "Payment notification URL",
      "fieldtype": "Data"
    },
    {
      "fieldname": "payment_callback_url",
      "label": "Payment Callback URL",
      "fieldtype": "Data"
    },
    {
      "fieldname": "payment_reversal_url",
      "label": "Payment reversal URL",
      "fieldtype": "Data"
    },
    {
      "fieldname": "column_prod",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "our_production_ip",
      "label": "Our production IP",
      "fieldtype": "Data"
    },
    {
      "fieldname": "section_rules",
      "label": "Rules",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "allowed_customer_groups",
      "label": "Allowed Customer Groups",
      "fieldtype": "MultiSelectList",
      "description": "Only customers in these groups will be accessible to BK. Leave blank to default to Student."
    },
    {
      "fieldname": "payer_code_field",
      "label": "Payer Code Field",
      "fieldtype": "Select",
      "options": "name\ncustomer_name\ntax_id",
      "default": "name"
    },
    {
      "fieldname": "column_defaults",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "default_mode_of_payment",
      "label": "Default Mode of Payment",
      "fieldtype": "Link",
      "options": "Mode of Payment"
    }
  ],
