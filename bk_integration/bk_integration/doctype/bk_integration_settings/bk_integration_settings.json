{
  "doctype": "DocType",
  "name": "BK Integration Settings",
  "module": "BK Integration",
  "custom": 0,
  "istable": 0,
  "issingle": 1,
  "editable_grid": 0,
  "track_changes": 1,
  "field_order": [
    "section_integration",
    "enable_integration",
    "erp_base_url",
    "our_production_ip",
    "column_bk",
    "bk_base_url",
    "bk_payment_api_key",
    "bk_connect_api_key",
    "section_rules",
    "allowed_customer_groups",
    "payer_code_field",
    "default_company",
    "default_mode_of_payment",
    "expose_item_details",
    "section_auth",
    "auth_username",
    "auth_password",
    "token_ttl_seconds",
    "section_urls",
    "auth_url",
    "validation_url",
    "payment_notification_url",
    "payment_callback_url",
    "payment_reversal_url",
    "test_connection_section",
    "last_test_status",
    "last_test_message",
    "last_test_on",
    "section_logging",
    "log_requests"
  ],
  "fields": [
    {
      "fieldname": "section_integration",
      "fieldtype": "Section Break",
      "label": "BK Integration"
    },
    {
      "fieldname": "enable_integration",
      "label": "Enable Integration",
      "fieldtype": "Check"
    },
    {
      "fieldname": "erp_base_url",
      "label": "ERP Base URL",
      "fieldtype": "Data",
      "description": "Base URL BK should call (example: https://erp.twowingsis.com). If blank, system will auto-detect from current site URL.",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "our_production_ip",
      "label": "Our Production IP",
      "fieldtype": "Data",
      "description": "Enter the public IP BK should whitelist (editable).",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "column_bk",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "bk_base_url",
      "label": "BK API Base URL",
      "fieldtype": "Data",
      "description": "BK / UrubutoPay base URL for outbound calls (used by Test Connection). Example: https://api.example.bk",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "bk_payment_api_key",
      "label": "BK Payment API Key",
      "fieldtype": "Password",
      "description": "Paste the Payment API key from BK portal (stored encrypted).",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "bk_connect_api_key",
      "label": "BK Connect API Key",
      "fieldtype": "Password",
      "description": "Paste the Connect API key from BK portal (stored encrypted).",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "section_rules",
      "label": "Rules",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "allowed_customer_groups",
      "label": "Allowed Customer Groups (comma-separated)",
      "fieldtype": "Data",
      "description": "Example: Student, Alumni. Leave blank to default to Student.",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "payer_code_field",
      "label": "Payer Code Field (Customer)",
      "fieldtype": "Data",
      "default": "name",
      "description": "Customer fieldname BK sends as payer_code. Use 'name' for Customer ID, or any other Customer field (including custom field like 'student_id').",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "default_company",
      "label": "Default Company",
      "fieldtype": "Link",
      "options": "Company",
      "description": "Optional: if set, invoices will be filtered by this company.",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "default_mode_of_payment",
      "label": "Default Mode of Payment",
      "fieldtype": "Link",
      "options": "Mode of Payment",
      "description": "Used when BK payment is recorded into ERPNext Payment Entry.",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "expose_item_details",
      "label": "Expose Invoice Line Items",
      "fieldtype": "Check",
      "default": "1",
      "description": "If checked, BK will receive invoice line item names/descriptions.",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "section_auth",
      "label": "BK â†’ ERP Authentication",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "auth_username",
      "label": "Auth Username",
      "fieldtype": "Data",
      "description": "Shared with BK/UrubutoPay for calling ERP endpoints.",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "auth_password",
      "label": "Auth Password",
      "fieldtype": "Password",
      "description": "Shared with BK/UrubutoPay for calling ERP endpoints.",
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "token_ttl_seconds",
      "label": "Token TTL (seconds)",
      "fieldtype": "Int",
      "default": 86400,
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "section_urls",
      "label": "Webhook URLs (Give These to BK)",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "auth_url",
      "label": "Auth URL",
      "fieldtype": "Data",
      "read_only": 1,
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "validation_url",
      "label": "Validation URL",
      "fieldtype": "Data",
      "read_only": 1,
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "payment_notification_url",
      "label": "Payment Notification URL",
      "fieldtype": "Data",
      "read_only": 1,
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "payment_callback_url",
      "label": "Payment Callback URL",
      "fieldtype": "Data",
      "read_only": 1,
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "payment_reversal_url",
      "label": "Payment Reversal URL",
      "fieldtype": "Data",
      "read_only": 1,
      "depends_on": "eval:doc.enable_integration"
    },
    {
      "fieldname": "test_connection_section",
      "label": "Connection Test",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "last_test_status",
      "label": "Last Test Status",
      "fieldtype": "Data",
      "read_only": 1
    },
    {
      "fieldname": "last_test_message",
      "label": "Last Test Message",
      "fieldtype": "Small Text",
      "read_only": 1
    },
    {
      "fieldname": "last_test_on",
      "label": "Last Tested On",
      "fieldtype": "Datetime",
      "read_only": 1
    },
    {
      "fieldname": "section_logging",
      "label": "Logging",
      "fieldtype": "Section Break"
    },
    {
      "fieldname": "log_requests",
      "label": "Log Incoming Requests",
      "fieldtype": "Check",
      "default": "1",
      "depends_on": "eval:doc.enable_integration"
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "share": 1,
      "print": 1,
      "email": 1,
      "report": 1,
      "export": 1
    }
  ]
}
